C C-WRC+o-mb-o+o-mb-o2
(* Forbid, all full memory barriers. *)
{
x = 0;
y = 0;
}

P0(int *x)
{
	WRITE_ONCE(*x, 1);
}

P1(int *y, int *x)
{
	r3 = READ_ONCE(*x);
	smp_mb();
	WRITE_ONCE(*y, 1);
}

P2(int *x, int *y)
{
	r1 = READ_ONCE(*y);
	smp_mb();
	r2 = READ_ONCE(*x);
}

exists (1:r3=1 /\ 2:r1=1 /\ 2:r2=0)
