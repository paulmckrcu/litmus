C C-3.LB+o-rel+acq-rel+acq
{
x = 0;
y = 0;
z = 0;
}

P0(int *x, int *y)
{
	r1 = READ_ONCE(*x);
	smp_store_release(y, 1);
}

P1(int *y, int *z)
{
	r3 = smp_load_acquire(y);
	smp_store_release(z, 1);
}

P2(int *x, int *z)
{
	r4 = smp_load_acquire(z);
	WRITE_ONCE(*x, 1);
}

exists(0:r1=1 /\ 1:r3=1 /\ 2:r4=1)
(*More precisely, Paul says:
        C11 would forbid this without a w[release] for P2 -- and without
        a r[acquire] for P0, for that matter.
*)
